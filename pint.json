{
    "preset": "laravel",
    "rules": {
        "simplified_null_return": true,
        "braces": false,
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": false
        },
        "phpdoc_types_order": {
            "null_adjustment": "always_last",
            "sort_algorithm": "none"
        }
    }
}
